{% set username = comment.user.username %}
<div class="comment mb-5" id="comment-{{comment.id}}">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <a class="text-decoration-none" href="#">
                    <span class="comment-author">
                    {{username}}
                    </span>
                </a>
            </h5>
            <p class="card-text">
            {{comment.content}}
            </p>
        </div>
    </div>
</div>