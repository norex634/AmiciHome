{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

   <div class="container text-white">
    
        <table class="table table-dark">
        <thead class="thead-dark">
          <tr>
            <th>Nom</th>
            <th>Classe</th>
            <th>Spe</th>
            <th>Discord</th>
          </tr>
        </thead>
        <tbody>
        {% for apply in applys %}
          <tr>
            <td> <a href="{{path('ApplyShow',{"slug":apply.slug})}}">{{apply.nom}}</a> </td>
            <td>{{apply.user.classe}}</td>
            <td>{{apply.user.spe.nom}}</td>
            <td>{{apply.discord}}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    
    <div class="container">
      <div class="row">
        <div class="d-flex align-items-center justify-content-center">
          {{knp_pagination_render(applys)}}
        </div>
      </div>
    </div>
   </div>
    


    <div class="pt-3 mt-4 text-body-secondary border-top">
    </div>


  
{% endblock %}
